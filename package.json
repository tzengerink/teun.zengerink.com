{
  "name": "teun-zengerink-com",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint:eslint": "eslint src/",
    "lint:tsc": "tsc --noEmit",
    "lint": "npm run lint:eslint && npm run lint:tsc",
    "postinstall": "if [ -z '$CI' ]; then husky && playwright install; fi",
    "start": "next start",
    "test:e2e": "playwright test src/e2e",
    "test:smoke": "export $(grep -v '^#' .env | xargs) && curl -v --silent $NEXT_PUBLIC_PROTO://$NEXT_PUBLIC_HOST/ 2>&1 | grep -q $(git rev-parse HEAD)",
    "test:unit": "jest --ci --collectCoverage",
    "test:watch": "jest --watch",
    "test": "npm run lint && npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "25.2.0",
    "@types/react": "19.2.10",
    "classnames": "^2.5.1",
    "js-yaml": "^4.1.1",
    "marked": "^17.0.1",
    "next": "^16.1.5",
    "next-build-id": "^3.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "slugify": "^1.6.6",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^16.1.4",
    "@playwright/test": "^1.58.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.24",
    "baseline-browser-mapping": "^2.9.18",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18"
  }
}
