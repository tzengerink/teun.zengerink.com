{
  "name": "teun.zengerink.com",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "next build && next export",
    "dev": "next dev",
    "fix": "yarn lint --fix",
    "lint:ts": "eslint src/**/*.{ts,tsx}",
    "lint:types": "tsc --noEmit",
    "lint": "yarn lint:ts && yarn lint:types",
    "postinstall": "husky install",
    "start": "next start",
    "test:ci": "yarn lint && jest --ci --collectCoverage",
    "test:smoke": "export $(grep -v '^#' .env | xargs) && curl -v --silent $NEXT_PUBLIC_PROTO://$NEXT_PUBLIC_HOST/ 2>&1 | grep -q $(git rev-parse HEAD)",
    "test": "jest --watch"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "next": "^11.1.2",
    "next-build-id": "^3.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^6.0.3",
    "sass": "^1.39.0",
    "sharp": "^0.29.0",
    "slugify": "^1.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@testing-library/react": "^12.0.0",
    "@types/image-size": "^0.8.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@types/react": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "babel-jest": "^27.1.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "typescript": "^4.4.2"
  }
}
