{
  "name": "teun.zengerink.com",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "next build && next export",
    "dev": "next dev",
    "lint:ts": "eslint src/",
    "lint:types": "tsc --noEmit",
    "lint": "yarn lint:ts && yarn lint:types",
    "postinstall": "husky install && playwright install",
    "start": "next start",
    "test:e2e": "playwright test src/e2e",
    "test:smoke": "export $(grep -v '^#' .env | xargs) && curl -v --silent $NEXT_PUBLIC_PROTO://$NEXT_PUBLIC_HOST/ 2>&1 | grep -q $(git rev-parse HEAD)",
    "test:unit": "jest --ci --collectCoverage",
    "test:watch": "jest --watch",
    "test": "yarn lint && yarn test:unit && yarn test:e2e"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "js-yaml": "^4.1.0",
    "marked": "^4.2.12",
    "next": "^13.1.6",
    "next-build-id": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.31.3",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@next/eslint-plugin-next": "^13.1.5",
    "@playwright/test": "^1.30.0",
    "@testing-library/react": "^13.4.0",
    "@types/image-size": "^0.8.0",
    "@types/jest": "^29.4.0",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "autoprefixer": "^10.4.13",
    "babel-jest": "^29.4.1",
    "eslint": "^8.33.0",
    "eslint-config-next": "^13.1.6",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.2",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.5"
  }
