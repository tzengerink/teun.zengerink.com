{
  "name": "teun.zengerink.com",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint:ts": "eslint src/",
    "lint:types": "tsc --noEmit",
    "lint": "yarn lint:ts && yarn lint:types",
    "postinstall": "husky install && playwright install",
    "start": "next start",
    "test:e2e": "playwright test src/e2e",
    "test:smoke": "export $(grep -v '^#' .env | xargs) && curl -v --silent $NEXT_PUBLIC_PROTO://$NEXT_PUBLIC_HOST/ 2>&1 | grep -q $(git rev-parse HEAD)",
    "test:unit": "jest --ci --collectCoverage",
    "test:watch": "jest --watch",
    "test": "yarn lint && yarn test:unit && yarn test:e2e"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "js-yaml": "^4.1.0",
    "marked": "^7.0.4",
    "next": "^13.4.13",
    "next-build-id": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.32.4",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@next/eslint-plugin-next": "^13.4.13",
    "@playwright/test": "^1.36.2",
    "@testing-library/react": "^14.0.0",
    "@types/image-size": "^0.8.0",
    "@types/jest": "^29.5.3",
    "@types/marked": "^5.0.0",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^29.6.1",
    "eslint": "^8.44.0",
    "eslint-config-next": "^13.4.9",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.1",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  }
